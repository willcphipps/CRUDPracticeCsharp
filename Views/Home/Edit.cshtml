@model Dish

<div class="text-center m-3">
<h4>Edit @Model.DishName</h4>
</div>
<form asp-action="Update" asp-route-DId="@Model.DishId" method="post" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="DishName"></span>
        <label asp-for="DishName"></label>
        <input asp-for="DishName" class="form-control">
    </div>
        <div class="form-group">
        <span asp-validation-for="ChefName"></span>
        <label asp-for="ChefName"></label>
        <input asp-for="ChefName" class="form-control">
    </div>
        <div class="form-group">
        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness"></label>
        <input type="number" min="1" max="10" asp-for="Tastiness" class="form-control">
    </div>
        <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input type="number" min="10" max="2000" asp-for="Calories" class="form-control">
    </div>
        <div class="form-group">
        <span asp-validation-for="description"></span><br>
        <label asp-for="description"></label>
        <input asp-for="description" class="form-control">
        <br>
        <input type="submit" value="edit @Model.DishName" class="btn btn-outline-secondary">
</form>