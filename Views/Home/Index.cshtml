
@{
    ViewData["Title"] = "Home Page";
}
@model List<Dish>
<div class="text-center">
    <h1 class="display-4">CRUDelcious</h1>
    <p>The project to learn about data manipulation utilizing the entity framework.</p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Dish Name:</th>
            <th>Chef:</th>
            <th>Tastiness:</th>
            <th>Calories:</th>
            <th>Created:</th>
            <th>Action:</th>

        </tr>
    </thead>
    <tbody>
        @foreach( Dish yum in Model )
        {
            <tr>
                <td><a class="text-info" href="/@yum.DishId">@yum.DishName<a></td>
                <td>@yum.ChefName</td>
                <td>@yum.Tastiness</td>
                <td>@yum.Calories</td>
                <td>@yum.description</td>
                <td>@yum.CreatedAt.ToShortDateString() || @yum.CreatedAt.ToShortTimeString()</td>
                <td><a asp-action="Edit" asp-route-DId="@yum.DishId">edit</a> || <a class="text-danger"href="/delete/@yum.DishId">delete</a></td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center"><a href="Add"><div class="btn btn-lg btn-outline-secondary">Add New!</div></a></div>